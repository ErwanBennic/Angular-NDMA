{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
<body>
    {% include 'header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            {% include 'nav.html.twig' %}
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                {# Temperature #}
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Capteurs de température</h1>
                </div>
                <div class="row">
                    {% for data in datas %}
                        {% if data.unit == '°C' %}
                            <div class="col-md-2">
                                <div class="card mb-4 shadow-sm card-bg-color">
                                    <img src="{{ asset('assets/img/temperature.png') }}" class="image-temp">
                                    <div class="card-body">
                                        <p class="card-text detail-text">Type : {{ data.name }}</p>
                                        <p class="card-text detail-text">Température : {{ data.value }} {{ data.unit }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                {# Humidité #}
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Capteurs d'humidité</h1>
                </div>
                <div class="row">
                    {% for data in datas %}
                        {% if data.unit == '%' %}
                        <div class="col-md-2">
                            <div class="card mb-4 shadow-sm card-bg-color">
                                <img src="{{ asset('assets/img/humidity.png') }}" class="image-temp">
                                <div class="card-body">
                                    <p class="card-text detail-text">Type : {{ data.name }}</p>
                                    <p class="card-text detail-text">Taux d'humidité : {{ data.value }} {{ data.unit }}</p>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </main>
        </div>
    </div>
</body>
{% endblock %}
